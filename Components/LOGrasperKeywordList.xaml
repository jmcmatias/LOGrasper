<UserControl x:Class="LOGrasper.Components.LOGrasperKeywordList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LOGrasper.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#686862" Height="Auto">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>



        <Grid Grid.Row="0" Margin="5 5 0 0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0"  Grid.Column="0" Text="Insert Keyword"   BorderBrush="Gray"  Background="Azure" FontSize="17" Height="30"/>
            <Button Grid.Row="0" Grid.Column="1" Content="ADD"  Background="#FEB1FE" AllowDrop="True" Height="30" Width="40" HorizontalAlignment="Left"></Button>
        </Grid>

        <ListBox Grid.Row="1" Height="auto" Background="#D9D9D9" Margin="5 5 0 0" />
    


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Name="Edit" Grid.Column="0" Content="EDIT" Margin="5 0 5 5" Background="#A8A7A6" Height="30"></Button>
            <Button Name="Delete" Grid.Column="1" Content="DELETE" Margin="5 0 5 5" Background="#A8A7A6" Height="30"></Button>
        </Grid>
    </Grid>
</UserControl>
